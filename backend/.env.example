# Server Configuration
NODE_ENV=development
PORT=5000

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
# Note: Use the service_role key for backend API (not anon key)
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

# JWT Configuration
JWT_SECRET=your-secret-jwt-key-here
JWT_EXPIRES_IN=2h

# Frontend URL
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# Email Configuration (Using InMotion SMTP)
EMAIL_HOST=smtp.inmotionhosting.com
EMAIL_PORT=587
EMAIL_USER=noreply@bgpnc.com
EMAIL_PASSWORD=your_email_password

# Zoho Integration (Optional - for Phase 2)
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_ACCOUNT_ID=your-zoho-account-id

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@bgpnc.com
ADMIN_PASSWORD=ChangeMeImmediately!