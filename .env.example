# BGP Members Management - Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=5000

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:3000

# API URL (update for production)
API_URL=http://localhost:5000

# ==========================================
# PLANETSCALE DATABASE CONFIGURATION
# ==========================================
# Get these values from: pscale password create bgp-members main password-name

DATABASE_HOST=aws.connect.psdb.cloud
DATABASE_USER=your_username_here
DATABASE_PASSWORD=pscale_pw_your_password_here
DATABASE_NAME=bgp-members
DATABASE_PORT=3306

# SSL Configuration (required for PlanetScale)
DATABASE_SSL=true
DATABASE_CONNECTION_LIMIT=10
DATABASE_QUEUE_LIMIT=0

# ==========================================
# ALTERNATIVE: LOCAL MYSQL (for development)
# ==========================================
# Uncomment these if using local MySQL instead of PlanetScale
# DATABASE_HOST=localhost
# DATABASE_USER=root
# DATABASE_PASSWORD=your_local_password
# DATABASE_NAME=bgp_members
# DATABASE_PORT=3306
# DATABASE_SSL=false

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# Option 1: Zoho Mail
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@bgpnc.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM_NAME=Believers Gathering Place
EMAIL_FROM_ADDRESS=noreply@bgpnc.com

# Option 2: SendGrid (recommended for production)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
# EMAIL_FROM_ADDRESS=noreply@bgpnc.com
# EMAIL_FROM_NAME=Believers Gathering Place

# Option 3: Resend (modern alternative)
# RESEND_API_KEY=re_your_resend_api_key_here
# EMAIL_FROM_ADDRESS=noreply@bgpnc.com
# EMAIL_FROM_NAME=Believers Gathering Place

# ==========================================
# ZOHO CRM INTEGRATION (Optional)
# ==========================================
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_REDIRECT_URI=https://members.bgpnc.com/auth/zoho/callback
ZOHO_ENABLED=false

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
REGISTRATION_RATE_LIMIT_MAX=5

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_change_this_in_production

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# ==========================================
# VERCEL DEPLOYMENT (Production)
# ==========================================
# Set these in Vercel dashboard under Settings > Environment Variables
# VERCEL_URL (automatically set by Vercel)
# VERCEL_ENV (automatically set by Vercel: production, preview, development)

# ==========================================
# RAILWAY DEPLOYMENT (Backend)
# ==========================================
# Set these in Railway dashboard under Variables
# RAILWAY_ENVIRONMENT (automatically set)
# RAILWAY_PUBLIC_DOMAIN (automatically set)
