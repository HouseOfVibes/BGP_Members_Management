# Backend Environment Variables
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=bgp_members_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-too
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Optional - for email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=BGP Members <noreply@bgpnc.com>

# Google Maps API (for member location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Admin Setup
ADMIN_EMAIL=admin@bgpnc.com
ADMIN_PASSWORD=changethispassword

# CORS Settings (for production)
CORS_ORIGIN=https://your-vercel-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Environment Variables (create .env.local in frontend folder)
# REACT_APP_API_URL=https://your-backend-url.vercel.app
# REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key